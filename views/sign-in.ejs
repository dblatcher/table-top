<!DOCTYPE html>
<html>
  <%- include('includes/head', {title:`${title}` , scripts:[]}); %>

  <body>
      <%- include('includes/header', {
        player: (typeof player !== 'undefined' ? player : null ),
        pageData:   (typeof pageData !== 'undefined' ? pageData : {} ),
      }); %>

    <main>
        <h2>Sign In</h2>
        <p>
          This is the sign in page.
          <% if (player) { %>
            <span>You are signed in as <%= player.playerName %>.</span>
          <% } %>
        </p>


        <% if (pageData.formErrors && pageData.nameOfFormWithErrors === 'sign-in-form') { %>
          <h2>Sign in failed</h2>
          <%= pageData.formErrors.toString() %>
        <% } %>

    </main>

    <%- include('includes/footer'); %>
  </body>
</html>
